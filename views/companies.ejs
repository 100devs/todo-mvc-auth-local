<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contactr</title>
    <link
      rel="icon"
      href="https://github.com/anthonypz/todo-mvc-auth-local/blob/main/public/assets/Contactr-logos/coffeechat-icon.png?raw=true"
    />

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- Work around Fix for MIME issue, it seemed to originate from possible render / redirect issues from back end -->
    <!-- Notice the below href value does NOT have a slash (/) where as the addCompany.ejs includes a slash (/) -->

    <link rel="stylesheet" href="css/style.css" />
  </head>

  <!-- Header / Navbar -->
  <header class="navbar-space">
    <nav class="navbar navbar-light bg-white navbar-bottom-shadow">
      <div class="container">
        <div class="row d-flex justify-content-between w-100">
          <div class="col"></div>
          <div class="col m-1 text-center d-flex justify-content-center">
            <a class="navbar-brand m-0" href="/">
              <!-- Swap IMG src to coffeechat-icon.png after uploading assets -->
              <img
                src="https://github.com/anthonypz/todo-mvc-auth-local/blob/main/public/assets/Contactr-logos/coffeechat-icon.png?raw=true"
                alt=""
                width="30"
                height="24"
                class="align-text-top text-center"
              />
              Contactr
            </a>
          </div>
          <!-- LogOut Button -->
          <div class="col text-end">
            <a
              href="/logout"
              class="btn btn-lg btn-danger btn-block navbar-right"
              role="button"
              >Logout</a
            >
          </div>
        </div>
      </div>
    </nav>
  </header>

  <body class="">
    <div class="fb-box-shadow rounded-corners p-4 m-4">
      <!-- button to add a company -->
      <div class="container">
        <div class="row">
          <div class="col col-12 text-center">
            <a
              href="companies/add"
              class="btn btn-primary btn-lg text-center m-4"
              >Add Company</a
            >
          </div>
        </div>
        <!-- Bootstrap Tabs -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="accordion-tab"
              data-bs-toggle="tab"
              data-bs-target="#accordion-tab-pane"
              type="button"
              role="tab"
              aria-controls="home-tab-pane"
              aria-selected="true"
            >
              Desktop View
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="card-tab"
              data-bs-toggle="tab"
              data-bs-target="#card-tab-pane"
              type="button"
              role="tab"
              aria-controls="card-tab-pane"
              aria-selected="false"
            >
              Mobile View
            </button>
          </li>
        </ul>
        <!-- Content for the Tabs -->
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="accordion-tab-pane"
            role="tabpanel"
            aria-labelledby="accordion-tab"
            tabindex="0"
          >
            <!-- Accordion View Content Goes Here -->
            <div class="accordion">
              <% companies.forEach(company => { %>
              <div class="accordion-item m-4">
                <h2
                  class="accordion-header"
                  id="<%= company.companyName %>head"
                >
                  <button
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseTarget<%= company._id %>"
                    aria-expanded="false"
                    aria-controls="<%= company.companyName %>"
                  >
                    <div data-id="<%=company._id%>">
                      <h5 class="card-title">
                        Company Name: <%= company.companyName %>
                      </h5>
                      <h6 class="card-subtitle mb-2 text-muted">
                        Point of Contact Name: <%= company.pointOfContact.name
                        %>
                      </h6>
                      <p class="card-text">
                        Point of Contact Email: <%= company.pointOfContact.email
                        %>
                      </p>
                    </div>
                  </button>
                </h2>
                <!-- Collapse Toggle Button -->
                <div
                  id="collapseTarget<%= company._id %>"
                  class="accordion-collapse collapse"
                  aria-labelledby="headingOne"
                >
                  <div class="accordion-body">
                    <!-- EDIT and DELETE Buttons -->
                    <div class="text-center m-2" data-id="<%=company._id%>">
                      <a
                        href="/companies/edit/<%= company._id %>"
                        class="card-link btn btn-secondary"
                        >Edit</a
                      >
                      <button class="del-company btn btn-danger">Delete</button>
                    </div>
                    <div class="">
                      <!-- Company Info: -->
                      <!-- Job Description Table -->
                      <h3>Job Description</h3>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Company Name</th>
                            <th scope="col">Date Added</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= company.companyName%></td>
                            <td>
                              <%=
                              company.dateAdded?.toLocaleDateString("en-US")%>
                            </td>
                            <table
                              class="table table-sm table-striped table-borderless"
                            >
                              <thead>
                                <tr>
                                  <th scope="col">Company Website</th>
                                  <th scope="col">Role/Position</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td><%= company.url%></td>
                                  <td><%= company.role%></td>
                                </tr>
                              </tbody>
                            </table>
                            <table
                              class="table table-sm table-striped table-borderless"
                            >
                              <thead>
                                <tr>
                                  <th scope="col">Role/Position URL</th>
                                  <th scope="col">Position Type</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td><%= company.roleURL%></td>
                                  <td><%= company.position%></td>
                                </tr>
                              </tbody>
                            </table>
                            <table
                              class="table table-sm table-striped table-borderless"
                            >
                              <thead>
                                <tr>
                                  <th scope="col">Source</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td><%= company.source%></td>
                                </tr>
                              </tbody>
                            </table>
                          </tr>
                        </tbody>
                      </table>
                      <!--  Point of Contact Table -->
                      <h3>Point of Contact</h3>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Position at Company</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= company.pointOfContact.name %></td>
                            <td><%= company.pointOfContact.position %></td>
                          </tr>
                        </tbody>
                      </table>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Email</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= company.pointOfContact.email %></td>
                          </tr>
                        </tbody>
                      </table>

                      <!-- Application Table -->
                      <h3>Application</h3>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Applied</th>
                            <th scope="col">Apply Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <%= company.application.applied?"Yes":"No" %>
                            </td>
                            <td>
                              <%=
                              company.application.applyDate?.toLocaleDateString("en-US")
                              %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Coffee Chat</th>
                            <th scope="col">Coffee Chat Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <%= company.application.coffeeChat?"Yes":"No" %>
                            </td>
                            <td>
                              <%=
                              company.application.coffeeChatDate?.toLocaleDateString("en-US")
                              %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Said Thanks</th>
                            <th scope="col">Interview Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <%= company.application.saidThanks?"Yes":"No" %>
                            </td>
                            <td>
                              <%=
                              company.application.interviewDate?.toLocaleDateString("en-US")
                              %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      <table
                        class="table table-sm table-striped table-borderless"
                      >
                        <thead>
                          <tr>
                            <th scope="col">Follow Up Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td>
                              <%=
                              company.application.followUpDate?.toLocaleDateString("en-US")
                              %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                    <!-- End of Tables -->
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>

          <div
            class="tab-pane fade"
            id="card-tab-pane"
            role="tabpanel"
            aria-labelledby="card-tab"
            tabindex="0"
          >
            <!-- MODBILE Card View Content Goes Here -->
            <!-- list of companies in card format -->
            <div class="row">
              <div class="col-12">
                <ul class="list-group">
                  <% companies.forEach(company => { %>
                  <li class="list-group-item">
                    <div class="card">
                      <div class="card-body" data-id="<%=company._id%>">
                        <h5 class="card-title">
                          Company Name: <%= company.companyName %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                          Point of Contact Name: <%= company.pointOfContact.name
                          %>
                        </h6>
                        <p class="card-text">
                          Point of Contact Email: <%=
                          company.pointOfContact.email %>
                        </p>
                        <a
                          href="#<%= company._id %>"
                          class="card-link"
                          data-toggle="collapse"
                          >View</a
                        >
                        <div id="#<%= company._id %>" class="collapse">
                          Howdy
                        </div>
                        <a
                          href="/companies/edit/<%= company._id %>"
                          class="card-link"
                          >Edit</a
                        >
                        <button class="del-company btn btn-danger">
                          Delete
                        </button>
                      </div>
                    </div>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <!-- LogOut Button -->
      <a
        href="/logout"
        class="btn btn-lg btn-danger btn-block m-2 d-flex justify-content-center w-25 mx-auto"
        role="button"
        >Logout</a
      >
    </div>

    <script src="js/main.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="js/companies.js"></script>
  </body>
</html>
