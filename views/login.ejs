<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HitList</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
    el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %>

    <form class="form-signin text-center" action="/login" method="POST">
      <div class="container">
        <div class="row">
          <div class="d-flex justify-content-center">
            <div class="col col-sm-7 col-md-5 col-lg-3">
              <img
                class="w-100 mx-auto d-block"
                src="https://i.imgur.com/YaBi6gk.png"
                alt="HitList Logo"
              />
            </div>
          </div>
        </div>
        <h1 class="h3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only mt-2">Email address</label>
        <div class="d-flex justify-content-center m-2">
          <div class="row">
            <div class="col">
              <input
                type="email"
                name="email"
                id="inputEmail"
                class="form-control"
                placeholder="Email / ID"
                required=""
                autofocus=""
              />
            </div>
          </div>
        </div>
        <label for="inputPassword" class="sr-only mt-2">Password</label>
        <div class="d-flex justify-content-center m-2">
          <div class="row">
            <div class="col">
              <input
                type="password"
                name="password"
                id="inputPassword"
                class="form-control"
                placeholder="Password"
                required=""
              />
            </div>
          </div>
        </div>

        <button class="btn btn-lg btn-primary btn-block m-2" type="submit">
          Sign in
        </button>
        <a class="btn btn-lg btn-success btn-block m-2" href="/signup" role="button"> Signup</a>
        <p class="m-4 text-muted">Â© 2022</p>
      </div>
    </form>
    <hr class="w-50 mx-auto" />
    <form class="form-signin text-center" action="/login" method="POST">
      <input
        type="hidden"
        name="email"
        id="inputEmail"
        class="form-control"
        placeholder="Email / ID"
        required=""
        autofocus=""
        value="admin@admin.com"
      />
      <input
        type="hidden"
        name="password"
        id="inputPassword"
        class="form-control"
        placeholder="Password"
        required=""
        value="admin1234"
      />
      <button class="btn btn-lg btn-secondary btn-block m-2" type="submit">
        Demo Sign in
      </button>
    </form>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
