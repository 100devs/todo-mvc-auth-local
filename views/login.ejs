<!DOCTYPE html>
<html lang="en">
<%-include ('partials/head') %>
<body id="loginContainer">
    <img id="biglogo" src="images/staticlogo.png" onmouseover="animateLogo" onmouseout="stopAnimateLogo">
    <h2 id="loginTitle">Blog about your Developer Days!</h2>
    <div id="loginPane">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>
        <form action="/login" method="POST">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <input type="submit" value="Log in" id="loginButton" class="button-18">
        </form>
    <div id="loginLinks">
        <a href='/signup'>No Account? Sign Up</a>
        <a href='/forgotPassword'>Forgot Password</a>
    </div>
    </div>
    <script src="js/main.js"></script>
</body>
</html>