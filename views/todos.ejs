    <section class="main-todos">

        <header>
            <div class="countdown">
                <h2 class="countdown-label">
                    <span>Chris</span><span>tmas</span> <span> Cou</span><span>ntdo</span><span>wn!
                    </span> <span></span><span>Comm</span><span>ence
                    </span> <span>festi</span><span>viti</span><span></span><span>es </span> <span>in
                        .</span><span>..</span>
                </h2>
                <section class="deadline">
                    <!--days -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>days</p>
                    </span>
                    <!--hours -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>hours</p>
                    </span>
                    <!-- minutes -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>minutes</p>
                    </span>
                    <!-- seconds -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>seconds</p>
                    </span>
                </section>
            </div>

            <audio controls>
                <source src="audio/music.mp3" type="audio/mp3">
            </audio>

        </header>
        <section class="create-list">
            <h1>Gift List</h1>
            <h2 class="gift-list-name">
                <%= todos.listName %>
            </h2>
            <ul class="sortArr flex">
                <% todos.forEach( el=> { %>
                    <li class='todoItem' data-id='<%=el._id%>'>
                        <span class="giftFor <%= el.completed === true ? ' completed' : 'not' %>"><%= el.giftFor %> - </span>
                        <span class='<%= el.completed === true ? ' completed' : 'not' %>'><%= el.todo %></span>
                        <span class='del'> <i class="fa-solid fa-ban"></i></span>
                    </li>
                    <% }) %>
            </ul>
            <button class="reverse-sort button">Sort in Reverse</button>
            <h2>
                <%= user.userName %> has <%= left %> things on this Christmas list
            </h2>

            <form action="/todos/createTodo" method='POST'>
                <div class="new-items">
                    <input class="input-field" type="text" placeholder="Enter Who the Gift is For" name='giftFor'>
                    <input class="input-field" type="text" placeholder="Enter Christmas Gift" name='todoItem'>
                </div>
                <input class="button" type="submit">

            </form>
        </section>

        <a class="button" href="/logout">Logout</a>

    </section>



    <script src="js/main.js"></script>
    <script src="js/sort.js"></script>
    <script src="js/countdown.js"></script>
</body>

