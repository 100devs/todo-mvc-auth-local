    </header>
    <section class="create-list">
    <h1>Gift List</h1>
    <h2 class="gift-list-name"><%= todos.listName %></h2>
    <section class="dropdown">
        <label for="list-type">Choose a type of gift list</label>
        <select class="input-field" name="list-type" id="list-type">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="Wishlist">Wishlist</option>
        </select>
    </section>

    <ul>
    <% todos.forEach( el => { %>
            <li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                <span class="giftFor"><%= el.giftFor %></span>
                <span class='del'> Delete </span>
            </li>
    <% }) %>    
    </ul>
    <button class="reverse-sort button">Sort in Reverse</button>
    <h2><%= user.userName %> has <%= left %> things on this christmas list</h2>

    <form action="/todos/createTodo" method='POST'>
        <div class="new-items">
            <input class="input-field" type="text" placeholder="Enter Who the Gift is For" name='giftFor'>
            <input class="input-field" type="text" placeholder="Enter Christmas Gift" name='todoItem'>
        </div>
        <input class="button" type="submit">
