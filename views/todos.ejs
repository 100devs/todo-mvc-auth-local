<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevDays</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Journal</h1>
    <ul>
    <h2><%= user.userName %> has <%= left %> journal entries logged.</h2>

    <% BlogPost.forEach( items => { %>
            <li class='todoItem' data-id='<%=items._id%>'>
                <span class=<%= items.body %></span>
                <span class='title'> <%= items.title %>  </span> 
                <span class='body'> <%= items.body %>  </span>
                <span class='gitHub'> <%= items.gitHub %>  </span>
                <span class='date'> <%= items.date %>  </span>
                <span class='dueDate'> <%= items.dueDate %>  </span>
                <span class="mood"> <%= items.mood %> </span>


            </li>
    <% }) %>    
    </ul>



 <form action="/blogPost/createBlogPost" method="POST">
        <div id="mainInput">
            <label for="title">Title</label><input id="title" name="title" placeholder="Post Title">
            <label for="title">GitHub Link</label><input id="gitHub" name="gitHub" placeholder="GitHub Link">
            <label for="title">Due Date</label><input id="dueDate" name="dueDate" placeholder="Due Date">
            <h3 id="date" name="date"></h3>
            <label for="title">Your Thoughts:</label><textarea id="postBody" name="postBody" rows="20" cols="50" placeholder="Write your daily dev journey here!"></textarea>
        </div>
        <div>
            <label for="mood">Mood: </label><select id="mood" name="mood">
                <option>Great</option>
                <option>Good</option>
                <option>Spicy</option>
            </select>
        </div>
        
        <div id="buttons">
        <input type="reset" id="clear" class="button-18" value="Clear">
        <!-- <button id="saveDraft">Save as Draft</button> -->
        <input type="submit" name="Post" class="button-18" value="Post">
        </div>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>