    <section class="main-todos">

        <header>
            <div class="countdown">
                <h2 class="countdown-label">Christmas Countdown! Commence festivities in ...</h2>
                <section class="deadline">
                    <!--days -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>days</p>
                    </span>
                    <!--hours -->
                    <span class="deadline-format">
                        <span class="time">00</span>
                        <p>hours</p>
                    </span>
                    <!-- minutes -->
