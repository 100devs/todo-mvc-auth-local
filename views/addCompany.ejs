<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<!-- Header / Navbar -->
<header class="navbar-space">
  <nav class="navbar navbar-light bg-white navbar-bottom-shadow">
    <div class="container">
      <div class="row d-flex justify-content-between w-100">
        <div class="col"></div>
        <div class="col m-1 text-center d-flex justify-content-center">
          <a class="navbar-brand m-0" href="/">
            <!-- Swap IMG src to coffeechat-icon.png after uploading assets -->
            <img
              src="https://github.com/anthonypz/todo-mvc-auth-local/blob/main/public/assets/Contactr-logos/coffeechat-icon.png?raw=true"
              alt="" width="30" height="24" class="align-text-top text-center" />
            Contactr
          </a>
        </div>
        <!-- LogOut Button -->
        <div class="col text-end">
          <a href="/logout" class="btn btn-lg btn-danger btn-block navbar-right" role="button">Logout</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<body class="">

  <div class="fb-box-shadow rounded-corners p-4 m-4 text-center text-md-start">
    <!-- Add a Company -->
    <div class="container">
      <div class="row">
        <div class="col col-12">
          <h2 class="text-center m-4">Add a Company</h2>
        </div>
      </div>
    </div>
    <form action="/companies/addCompany" method="POST">
      <!-- Job Description -->
      <div class="container align-items-center mx-auto">
        <div class="row">
          <div class="col col-12">
            <h3 class="text-center m-4">Job Description</h3>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="companyName">Company: <span style="color: red">*</span></label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Company Name" id="companyName"
                  name="companyName" required />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="dateAdded">Date Added:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="date" placeholder="Date Added" id="dateAdded"
                  name="dateAdded" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12"><label for="url">Company Website</label></div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="URL" id="url" name="url" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="roleURL">Role/Position:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Role/Position" id="roleURL" name="role" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="roleURL">Role/Position URL:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Position URL" id="roleURL" name="roleURL" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="position">Position Type:</label>
              </div>
              <div class="col col-md-12">
                <select class="w-100 form-select" aria-label="select position type" name="position" id="position">
                  <option selected value="">Choose position type</option>
                  <option value="Full-time Local">Full-time Local</option>
                  <option value="Full-time Remote">Full-time Remote</option>
                  <option value="Full-time Hybrid">Full-time Hybrid</option>
                  <option value="Part-time Local">Part-time Local</option>
                  <option value="Part-time Remote">Part-time Remote</option>
                  <option value="Part-time Hybrid">Part-time Hybrid</option>
                  <option value="Contract">Contract</option>
                  <option value="Internship">Internship</option>
                  <option value="Seasonal">Seasonal</option>
                  <option value="Temporary">Temporary</option>
                </select>
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="source">Source:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Word of Mouth, Job Board, Other" id="source"
                  name="source" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <!-- Point of Contact -->
      <div class="container p-4 align-items-center mx-auto">
        <div class="row">
          <div class="col col-12">
            <h3 class="text-center m-4">Point of Contact</h3>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="pocName">Name of Contact:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Name of Contact" id="pocName"
                  name="pocName" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="pocPosition">Position of Contact:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="text" placeholder="Position of Contact" id="pocPosition"
                  name="pocPosition" />
              </div>
            </div>
          </div>
          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="pocEmail">Email of Contact:</label>
              </div>
              <div class="col col-md-12">
                <input class="w-100 form-control" type="email" placeholder="Email of Contact" id="pocEmail"
                  name="pocEmail" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <!-- Application -->

      <!-- Check Boxes -->

      <div class="container p-4 align-items-center mx-auto">
        <div class="row text-center">
          <div class="col col-12">
            <h3 class="text-center m-4">Application</h3>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <input class="form-check-input" type="checkbox" placeholder="Applied?" id="applied" name="applied"
                  value='yes' />
                <label class="form-check-label" for="applied">Applied?</label>
              </div>
            </div>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <input class="form-check-input" type="checkbox" id="coffeeChat" name="coffeeChat" value='yes' />
                <label class="form-check-label" for="coffeeChat">Coffee Chat?</label>
              </div>
            </div>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <input class="form-check-input" type="checkbox" id="saidThanks" name="saidThanks" value='yes' />
                <label class="form-check-label" for="saidThanks">Said Thanks?</label>
              </div>
            </div>
          </div>

          <!-- Date Inputs -->

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="applyDate">Application Date:</label>
              </div>
              <div class="col">
                <input type="date" class="form-control" placeholder="Date you applied" id="applyDate"
                  name="applyDate" />
              </div>
            </div>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="coffeeChatDate">Coffee Chat Date:</label>
              </div>
              <div class="col"><input type="date" class="form-control" id="coffeeChatDate" name="coffeeChatDate" />
              </div>
            </div>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="interviewDate">Interview Date:</label>
              </div>
              <div class="col"><input type="date" class="form-control" id="interviewDate" name="interviewDate" /></div>
            </div>
          </div>

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="followUpDate">Follow-Up Date:</label>
              </div>
              <div class="col"><input type="date" class="form-control" id="followUpDate" name="followUpDate" /></div>
            </div>
          </div>

          <!-- Comments Text Area -->

          <div class="col col-12 col-md-6 col-xl-4">
            <div class="row m-2">
              <div class="col col-md-12">
                <label for="comments">Comments:</label>
              </div>
              <div class="col">
                <textarea name="comments" placeholder="Comments" id="comments" class="form-control" rows="4"
                  cols="25"></textarea>
              </div>
            </div>
          </div>
        </div>

        <!-- Submit Button -->

        <div class="row">
          <div class="col col-12 text-center">
            <a href="/companies" class="btn btn-lg btn-secondary m-2">Cancel</a>
            <button class="btn btn-lg btn-primary m-2" type="submit">
              Save
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <script src="js/main.js"></script>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
</body>

</html>