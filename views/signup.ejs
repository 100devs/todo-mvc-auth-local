<!DOCTYPE html>
<html lang="en">
<%-include ('partials/head') %>
<body>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <a href="/blogPost"><i id='backButton' class="fa fa-arrow-left"></i></a>
    <img id="biglogo" src="images/staticlogo.png" onmouseover="animateLogo" onmouseout="stopAnimateLogo">
    <h2>Create a new DevDays account</h2>
    <div id="signupContainer">
        <form action="/signup" method="POST">
            <input type="text" name="userName" placeholder="User Name">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <input type="password" name="confirmPassword" placeholder="Confirm Password">
            <input type="submit" value="Sign up" class="button-18">
        </form>
    </div>
</body>
<script src="/js/main.js"></script>
</html>