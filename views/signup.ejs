<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" integrity="sha512-UJfAaOlIRtdR+0P6C3KUoTDAxVTuy3lnSXLyLKlHYJlcSU8Juge/mjeaxDNMlw9LgeIotgz5FP8eUQPhX1q10A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/style.css">
    <title>Bill Tracker</title>
</head>
<body class="col s12 m12 l8" style="overflow:hidden">
     <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo logo-topleft"><img class="responsive-img" src="/assets/bill_tracker_logo_small.png"></a>
            <ul class="right">
                <li><a class="waves-effect waves-light btn z-depth-1" href="/login">login</a></li>
            </ul>
        </div>
    </nav>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
<section class="section container form-container z-depth-3">
    <h3 class="form-header">Create a new account: </h3>
    <div class="row">
        <div>
            <form action="/signup" method='POST'>
                <div class="input-field">
                    <input type="text"  name='userName'>
                    <label for="text">User Name</label>
                </div>
                <div class="input-field">
                    <input type="text" name='email'>
                    <label for="text">Email</label>
                </div>
                <div class="input-field">
                     <input type="text" name='password'>
                    <label for="text">Password: minimum of 8 characters</label>
                </div>
                <div class="input-field">
                     <input type="text" name='confirmPassword'>
                    <label for="date">Confirm Your Password</label>
                </div>
                <div class="input-field center">
                    <button class="btn form-submit z-depth-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
 </section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
