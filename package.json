		"express-session": "^1.17.1",
		"mongodb": "^3.6.5",
		"mongoose": "^5.12.3",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"passport": "^0.6.0",
